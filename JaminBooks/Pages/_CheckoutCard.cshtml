                                    <option value="CO">Colorado</option>
                                    <option value="CT">Connecticut</option>
                                    <option value="DE">Delaware</option>
                                    <option value="DC">District Of Columbia</option>
                                    <option value="FL">Florida</option>
                                    <option value="GA">Georgia</option>
                                    <option value="HI">Hawaii</option>
                                    <option value="ID">Idaho</option>
                                    <option value="IL">Illinois</option>
                                    <option value="IN">Indiana</option>
                                    <option value="IA">Iowa</option>
                                    <option value="KS">Kansas</option>
                                    <option value="KY">Kentucky</option>
                                    <option value="LA">Louisiana</option>
                                    <option value="ME">Maine</option>
                                    <option value="MD">Maryland</option>
                                    <option value="MA">Massachusetts</option>
                                    <option value="MI">Michigan</option>
                                    <option value="MN">Minnesota</option>
                                    <option value="MS">Mississippi</option>
                                    <option value="MO">Missouri</option>
                                    <option value="MT">Montana</option>
                                    <option value="NE">Nebraska</option>
                                    <option value="NV">Nevada</option>
                                    <option value="NH">New Hampshire</option>
                                    <option value="NJ">New Jersey</option>
                                    <option value="NM">New Mexico</option>
                                    <option value="NY">New York</option>
                                    <option value="NC">North Carolina</option>
                                    <option value="ND">North Dakota</option>
                                    <option value="OH">Ohio</option>
                                    <option value="OK">Oklahoma</option>
                                    <option value="OR">Oregon</option>
                                    <option value="PA">Pennsylvania</option>
                                    <option value="RI">Rhode Island</option>
                                    <option value="SC">South Carolina</option>
                                    <option value="SD">South Dakota</option>
                                    <option value="TN">Tennessee</option>
                                    <option value="TX">Texas</option>
                                    <option value="UT">Utah</option>
                                    <option value="VT">Vermont</option>
                                    <option value="VA">Virginia</option>
                                    <option value="WA">Washington</option>
                                    <option value="WV">West Virginia</option>
                                    <option value="WI">Wisconsin</option>
                                    <option value="WY">Wyoming</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <select id="Country" class="form-control">
                                    <option value="Canada">Canada</option>
                                    <option value="Germany">Germany</option>
                                    <option value="Mexico">Mexico</option>
                                    <option value="UK">United Kingdom</option>
                                    <option selected value="US">United States</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <input type="text" id="ZIP" class="form-control" maxlength="5" placeholder="ZIP">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 offset-3 text-center">
                        <input id="SaveCard" type="submit" value="Save" class="btn btn-success btn-block">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-none">
    <span id="AddressPopup">
    </span>
</div>

<script>

    $(document).ready(function () {
        $("#CardCreate").click(function () {
            $("#CardModal").modal("show");
        });

        $("#Country").change(function () {
            if ($("#Country").val() != "US")
                $("#State").parent().hide();
            else $("#State").parent().show();
        });

        $("#Number1, #Number2, #Number3, #Number4").on('input', function () {
            if ($(this).val().length == 4) {
                $(this).parent().next().find("input").focus();
            }
        });

        initPopup();

        $("#SaveCard").click(function () {
            var validCard = validateCard();
            var validAddress = validateAddress();

            var data = {
                ID: $("#CardModal").data("id"),
                Number: $("#Number1").val() + $("#Number2").val() + $("#Number3").val() + $("#Number4").val(),
                Name: $("#Name").val(),
                ExpMonth: $("#ExpMonth").val(),
                ExpYear: $("#ExpYear").val(),
                CVC: $("#CVC").val(),
                Line1: $("#Line1").val(),
                Line2: $("#Line2").val(),
                City: $("#City").val(),
                State: $("#State").val(),
                Country: $("#Country").val(),
                ZIP: $("#ZIP").val(),
                UserID: $("#UserID").text()
            };

            if (validCard && validAddress) {
                $.ajax({
                    type: "POST",
                    url: "Model/SaveCard",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        var dccard = $(".dc-card[data-id='" + response[0] + "']");
                        dccard.fadeOut(function () {
                            dccard.remove();
                        });

                        var card = "";

                        card += '<div class="card dc-card d-inline-block item w-100" data-id="' + response[1] + '" '
                        card += 'data-name="' + data.Name + '" ';
                        card += 'data-month="' + data.ExpMonth + '" ';
                        card += 'data-year="' + data.ExpYear + '" ';
                        card += 'data-last-four="' + data.Number.substr(data.Number.length - 4) + '" ';
                        card += 'data-line1="' + data.Line1 + '" ';
                        card += 'data-line2="' + data.Line2 + '" ';
                        card += 'data-state="' + data.State + '" ';
                        card += 'data-city="' + data.City + '" ';
                        card += 'data-country="' + data.Country + '" ';
                        card += 'data-zip="' + data.ZIP + '" ';
                        card += '>'
                        card += '<div class="card-header" style="height:50px">'
                        card += '<span class="float-right text-dark show-address popup" data-tooltip-content="#AddressPopup"><i class="fas fa-home"></i></span>'
                        card += '</div>'
                        card += '<div class="card-body">'
                        card += '<h5 class="card-title dc-card-last-four">****-****-****-' + data.Number.substr(data.Number.length - 4) + '</h5>'
                        card += '<h6 class="card-subtitle mb-2 text-muted dc-card-exp">' + data.ExpMonth + "/" + data.ExpYear + '</h6>'
                        card += '<h5 class="card-title text-muted dc-card-name">' + data.Name + '</h5>'
                        card += '</div>'
                        card += '</div>'

                        $('#Cards').trigger('add.owl.carousel', card)

                        $("#CardModal").modal("hide");
                        initPopup();
                        $('#Cards').trigger('to.owl.carousel', -1);

                        var card = "";

                        card += '<div class="card address d-inline-block item w-100" data-id="' + response[2] + '" '
                        card += 'data-line1="' + data.Line1 + '" ';
                        card += 'data-line2="' + data.Line2 + '" ';
                        card += 'data-state="' + data.State + '" ';
                        card += 'data-city="' + data.City + '" ';
                        card += 'data-country="' + data.Country + '" ';
                        card += 'data-zip="' + data.ZIP + '" ';
                        card += '>'
                        card += '<div class="card-body">'
                        card += '<h6 class="card-title">' + data.Line1 + '</h6>'
                        if (data.Line2 != "")
                            card += '<h6 class="card-title text-muted">' + data.Line2 + '</h6>'
                        card += '<h6 class="card-title text-muted">' + data.City + ', ' + (data.Country != "US" ? data.Country : data.State) + ' ' + data.ZIP + '</h6>'
                        card += '</div>'
                        card += '</div>'

                        $('#Addresses').trigger('add.owl.carousel', card)
                        $('#Addresses').trigger('to.owl.carousel', -1);
                    },
                    failure: function (response) {
                        location.href = "\Error"
                    }
                });
            }
        });

        $('#CardModal').on('hidden.bs.modal', function () {
            $('#CardModal').data("id", -1);
            $("#Number1, #Number2, #Number3, #Number4").val("");
            $("#Name").val("");
            $("#ExpMonth, #ExpYear").val("");
            $("#CVC").val("");
            $("#Line1").val("");
            $("#Line2").val("");
            $("#City").val("");
            $("#ZIP").val("");
        })

        function validateAddress() {
            var valid = true;

            $("#Line1").removeAttr("style");
            $("#City").removeAttr("style");
            $("#ZIP").removeAttr("style");

            if ($("#Line1").val() == "") {
                $("#Line1").css("border-color", "red");
                valid = false;
            }

            if ($("#City").val() == "") {
                $("#City").css("border-color", "red");
                valid = false;
            }

            if ($("#ZIP").val() == "") {
                $("#ZIP").css("border-color", "red");
                valid = false;
            }

            return valid;
        }

        function initPopup() {
            $('.popup').tooltipster({
                contentCloning: true,
                contentAsHTML: true,
                theme: 'tooltipster-light',
                functionBefore: function (instance, helper) {
                    var data = "";

                    var card = $(helper.origin).parents(".dc-card");
                    data += '<div>'
                    data += '<h6 class="card-title">' + card.data("line1") + '</h6>'
                    if (card.data("line2") != "")
                        data += '<h6 class="card-title text-muted">' + card.data("line2") + '</h6>'
                    data += '<h6 class="card-title text-muted">' + card.data("city") + ', ' +
                        (card.data("country") != "US" ? card.data("country") : card.data("state"))
                        + ' ' + card.data("zip") + '</h6>'
                    data += '</div>'

                    instance.content(data);
                }
            });

        }

        function validateCard() {
            var valid = true;

            $("#Number1").removeAttr("style");
            $("#Number2").removeAttr("style");
            $("#Number3").removeAttr("style");
            $("#Number4").removeAttr("style");
            $("#Name").removeAttr("style");
            $("#ExpMonth").removeAttr("style");
            $("#ExpYear").removeAttr("style");
            $("#CVC").removeAttr("style");

            if ($("#Number1").val().length != 4 ||
                $("#Number2").val().length != 4 ||
                $("#Number3").val().length != 4 ||
                $("#Number4").val().length != 4) {

                $("#Number1").css("border-color", "red");
                $("#Number2").css("border-color", "red");
                $("#Number3").css("border-color", "red");
                $("#Number4").css("border-color", "red");

                valid = false;
            }

            if ($("#Name").val() == "") {
                $("#Name").css("border-color", "red");

                valid = false;
            }

            if ($("#CVC").val().length != 3) {
                $("#CVC").css("border-color", "red");

                valid = false;
            }

            if ($("#ExpMonth").val().length < 2) {
                $("#ExpMonth").css("border-color", "red");

                valid = false;
            }

            if ($("#ExpYear").val().length < 2) {
                $("#ExpYear").css("border-color", "red");

                valid = false;
            }

            return valid;
        }
    });
</script>