<!--CHECKOUT CARD-->
<!--This is a partial page based on the _Card page but tailored for the checkout page.-->
<div class="modal fade" id="CardModal" data-id="-1" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content do-not-scale">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-12">
                        <div class="row mb-2 ml-2" style="font-size:2em;color:#aaa">
                            <i class="fas fab fa-cc-visa mr-1"></i>
                            <i class="fas fab fa-cc-mastercard mr-1"></i>
                            <i class="fas fab fa-cc-discover mr-1"></i>
                            <i class="fas fab fa-cc-diners-club mr-1"></i>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3">
                                <input type="text" id="Number1" class="form-control" maxlength="4" placeholder="####">
                            </div>
                            <div class="col-3">
                                <input type="text" id="Number2" class="form-control" maxlength="4" placeholder="####">
                            </div>
                            <div class="col-3">
                                <input type="text" id="Number3" class="form-control" maxlength="4" placeholder="####">
                            </div>
                            <div class="col-3">
                                <input type="text" id="Number4" class="form-control" maxlength="4" placeholder="####">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <input type="text" id="Name" class="form-control" maxlength="100" placeholder="Name On Card">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-3 pr-2">
                                <input type="text" id="ExpMonth" class="form-control" maxlength="2" placeholder="MM">
                            </div>
                            <div class="col-1 slash">/</div>
                            <div class="col-3 pl-2">
                                <input type="text" id="ExpYear" class="form-control" maxlength="2" placeholder="YY">
                            </div>
                            <div class="col-3 offset-2">
                                <input type="text" id="CVC" class="form-control" maxlength="3" placeholder="CVC">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-12">
                        <div class="row mb-2">
                            <div class="col-12">
                                <input type="text" id="Line1" class="form-control" maxlength="100" placeholder="Line 1">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <input type="text" id="Line2" class="form-control" maxlength="100" placeholder="Line 2 (optional)">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <input type="text" id="City" class="form-control" maxlength="100" placeholder="City">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-12">
                                <select id="State" class="form-control">
