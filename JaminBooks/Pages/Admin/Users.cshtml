@page
@model UsersModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<form method="post">

    <button type="submit" asp-page-handler="search">
        search
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
            <tr>
                <td>@user.UserID</td>
                <td>@(user.FirstName + " " + user.LastName)
                <td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.UserID">edit</a>
                    <button type="submit" asp-page-handler="delete"
                            asp-route-id="@user.UserID">
                        delete
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <a asp-page="./Create">Create</a>
</form>


