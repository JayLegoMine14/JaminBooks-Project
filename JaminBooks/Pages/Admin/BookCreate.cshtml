@page
@model JaminBooks.Pages.Admin.BookCreateModel
@{
    ViewData["Title"] = "Create Book";
    DateTime date1 = new DateTime(2000, 1, 1);
}

<h2>Create a Book</h2>
<form method="post">
    <h3>Book Information</h3>
    <div>

            <input type="hidden" name="BookID" value="@(Model.Book == null ? -1 : Model.Book.BookID)" />
                <p>Title</p>
                <input type="text" required maxlength="100" name="Title" value="@(Model.Book == null ? "" : Model.Book.Title )" />
               <p>Publication Date</p>
               <input type="date" required name="PublicationDate" value="@(Model.Book == null ? date1 : Model.Book.PublicationDate )" />

            <input type="date" required name="PublicationDate" value="@(Model.Book == null ? date1 : Model.Book.PublicationDate )" />
            <input type="text" required name="ISBN10" value="@(Model.Book == null ? "" : Model.Book.ISBN10)" />
            <input type="text" required name="ISBN10" value="@(Model.Book == null ? "" : Model.Book.ISBN13 )" />
            <input type="number" step="0.1" required name="Price" value="@(Model.Book == null ? 0 : Model.Book.Price)" />
            <input type="number" step="0.1" required name="Cost" value="@(Model.Book == null ? 0 : Model.Book.Cost)" />
            <input type="number" required name="Quantity" value="@(Model.Book == null ? 0 : Model.Book.Quantity)" />
        
        <!--TODO: Add image upload-->
        <textarea required name="Description" value="@(Model.Book == null ? "" : Model.Book.Description)" /><br />
        @*<input type="text" name="Author" value="@Model.Author.FirstName + Model.Author.LastName" />
        <input list="Authors" name="Authors" />*@

        <input id="SaveBook" type="submit" value="Save Book" class="btn btn-primary btn-block btn-dark-red">
        
    </div>

</form>
